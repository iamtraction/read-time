{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "typings",
        "declarationMap": false,
        "diagnostics": true,
        "emitBOM": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "newLine": "lf",
        "noErrorTruncation": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "preserveWatchOutput": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": false,
        "target": "esnext"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
    "typeRoots" : [
        "./typings"
    ]
}
